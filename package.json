{
  "name": "openshift-rest-client",
  "version": "1.2.0",
  "description": "Node.js client for developing with OpenShift",
  "main": "index.js",
  "scripts": {
    "lint": "xo",
    "test": "tape test/*-test.js | tap-spec",
    "prepublish": "nsp check",
    "coverage": "nyc npm test",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "ci": "npm run lint && npm run coveralls",
    "release": "standard-version"
  },
  "xo": {
    "space": 2,
    "rules": {
      "space-before-function-paren": [
        "error",
        "always"
      ],
      "func-names": [
        "error",
        "always"
      ]
    },
    "overrides": [
      {
        "files": "test/*.js",
        "rules": {
          "promise/prefer-await-to-then": [
            "off"
          ]
        }
      }
    ]
  },
  "files": [
    "package.json",
    "README.md",
    "LICENSE",
    "index.js",
    "lib"
  ],
  "keywords": [
    "Openshift",
    "Node.js"
  ],
  "author": {
    "name": "Red Hat, Inc."
  },
  "maintainers": {
    "name": "Lucas Holmquist",
    "email": "lholmqui@redhat.com"
  },
  "engines": {
    "node": ">= 8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "bucharest-gold/openshift-rest-client"
  },
  "bugs": "https://github.com/bucharest-gold/openshift-rest-client/issues",
  "license": "Apache-2.0",
  "dependencies": {
    "openshift-config-loader": "^0.4.0",
    "request": "~2.87.0"
  },
  "devDependencies": {
    "coveralls": "^3.0.0",
    "nock": "^9.0.14",
    "nsp": "^3.1.0",
    "nyc": "^11.1.0",
    "proxyquire": "^2.0.0",
    "standard-version": "^4.3.0",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.3",
    "xo": "~0.20.3"
  }
}
